<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
    <id>com.mbeddr.persistence.neo4j</id>
    <name>Neo4j persistence for MPS</name>
    <description>Provides Neo4j persistence support for MPS</description>
    <version>0.1</version>
    <vendor url="http://www.jetbrains.com/mps/" logo="/MPS_16.png">JetBrains</vendor>
    <idea-version since-build="145.1" until-build="163.1"/>

    <depends>jetbrains.mps.core</depends>
    <depends>com.intellij.modules.mps</depends>

    <application-components>
        <!--api-->
        <component>
            <implementation-class>com.mbeddr.persistence.Neo4JModelPersistence</implementation-class>
        </component>

    </application-components>

    <extensionPoints>
        <extensionPoint qualifiedName="com.intellij.mps.modelRootEntry" beanClass="jetbrains.mps.ide.ui.dialogs.properties.persistence.ModelRootEntryEP"/>
        <extensionPoint qualifiedName="com.intellij.mps.modelRootFactory"
                        beanClass="jetbrains.mps.ide.persistence.ModelRootFactoryEP"/>
        <extensionPoint qualifiedName="com.intellij.mps.modelRootSettings"
                        beanClass="jetbrains.mps.ide.persistence.ModelRootSettingsEP"/>
    </extensionPoints>
    <extensions defaultExtensionNs="com.intellij">
        <mps.modelRootFactory rootType="java_source_stubs" className="com.mbeddr.modelroot.neo4j.Neo4JModelRootFactory"/>
        <!-- <mps.modelRootSettings rootType="java_source_stubs" className="jetbrains.mps.ide.java.sourceStubsUI.JavaSourceStubModelRootSettingsProvider"/>-->
        <mps.modelRootEntry rootType="java_source_stubs" className="com.mbeddr.modelroot.neo4j.Neo4JModelRootEntryFactory"/>
    </extensions>

</idea-plugin>
